{
  "make config": {
    "prefix": "class config",
    "body": [
      "namespace Config;",
      "",
      "use CodeIgniter\\Config\\BaseConfig;",
      "",
      "class ${1:name} extends BaseConfig",
      "{",
      "\t//",
      "}",
      ""
    ],
    "description": "Generates a new config."
  },
  "make controller": {
